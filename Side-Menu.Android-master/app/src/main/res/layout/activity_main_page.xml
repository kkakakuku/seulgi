<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/com.google.edgeva"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="yalantis.com.sidemenu.sample.MainPage">


    <Button
        android:text="Button2"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:id="@+id/button2"
        android:onClick="onClickedButton2"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignTop="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1" />

    <Button
        android:text="Button3"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:id="@+id/button3"
        android:onClick="onClickedButton3"
        android:layout_alignTop="@+id/button4"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1" />

    <Button
        android:text="Button4"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:id="@+id/button4"
        android:onClick="onClicikedButton4"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:text="Button1"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:id="@+id/button1"
        android:onClick="onClickedButton1"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="156dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/abc_btn_radio_to_on_mtrl_015"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:id="@+id/imageView" />
</RelativeLayout>
